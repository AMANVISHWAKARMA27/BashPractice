#!/usr/bin/env bash

# Function: perms
# Usage: perms file1 file2 ...
# Description: Prints out permissions of the given files in octal format.
# Example:
# $ perms weather ../README.md
# 775 weather
# 664 ../README.md

for file in "$@"; do
        if [ -e "$file" ]; then
            # Get permissions in octal format
            perm_octal=$(stat -c '%a' "$file")
            echo "$perm_octal $file"
        else
            echo "File $file does not exist."
        fi
    done